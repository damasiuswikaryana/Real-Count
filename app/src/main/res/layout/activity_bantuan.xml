<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_bantuan"
            android:orientation="vertical"
            android:paddingBottom="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:contentDescription="logo"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="300sp"
                    android:src="@drawable/logo_prabhu" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/latobold"
                    android:text="@string/title_bantuan"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="35sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-60dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:weightSum="2">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow_selector"
                android:elevation="2dp"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="0dp">

                <LinearLayout
                    android:id="@+id/layout_thanks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:orientation="vertical"
                    android:paddingTop="3dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:contentDescription="logo"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="130sp"
                        android:src="@drawable/mademudarta" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/latoregular"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:lineSpacingMultiplier="1.3"
                        android:text="@string/nama_pak_caleg"
                        android:textColor="#333"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/latoregular"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="12dp"
                        android:lineSpacingMultiplier="1.3"
                        android:text="@string/tlp_pak_caleg"
                        android:textColor="#333"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/latoregular"
                        android:gravity="center_horizontal"
                        android:lineSpacingMultiplier="1.3"
                        android:text="@string/help_teks"
                        android:textColor="#333"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:weightSum="3">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingRight="7dp"
                            android:paddingLeft="7dp"
                            android:orientation="vertical">
                            <ImageView
                                android:src="@drawable/vector_phone"
                                android:contentDescription="@string/telpon"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:tint="@color/textColorFooterBold"
                                />
                            <Button
                                android:id="@+id/btn_telpon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:textSize="13sp"
                                android:fontFamily="@font/latobold"
                                android:textColor="#333"
                                android:text="@string/telpon"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingRight="7dp"
                            android:paddingLeft="7dp"
                            android:orientation="vertical">
                            <ImageView
                                android:src="@drawable/vector_email"
                                android:contentDescription="@string/sms"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:tint="@color/textColorFooterBold"/>
                            <Button
                                android:id="@+id/btn_sms"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:textSize="13sp"
                                android:fontFamily="@font/latobold"
                                android:textColor="#333"
                                android:text="@string/sms"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingRight="7dp"
                            android:paddingLeft="7dp"
                            android:orientation="vertical">
                            <ImageView
                                android:src="@drawable/whatsapp"
                                android:contentDescription="@string/whatsapp"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:tint="@color/textColorFooterBold"/>
                            <Button
                                android:id="@+id/btn_wa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"
                                android:fontFamily="@font/latobold"
                                android:textColor="#333"
                                android:text="@string/whatsapp"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <Button
                android:id="@+id/btnKembaliInformasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_main2"
                android:fontFamily="@font/latoregular"
                android:padding="5dp"
                android:text="@string/btn_kembali_informasi"
                android:textAllCaps="false"
                android:textColor="#bf3037"
                android:textSize="15sp"
                android:textStyle="normal"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="logout"
                    android:layout_alignParentBottom="true"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:background="@drawable/topline_footer"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#8e8e8e"
                android:textSize="@dimen/footer_text"
                android:lineSpacingMultiplier="1.3"
                android:gravity="center"
                android:text="@string/copyright"
                />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
